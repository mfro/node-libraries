{
    "compilerOptions": {
        "target": "es3",
        "module": "commonjs",

        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,

        "outDir": "dist",
        "sourceMap": true,
        "declaration": true
    },
    
    "exclude": [
        "node_modules"
    ],

    "include": [
        "./declare/**/*.d.ts",
        "./src/**/*.ts"
    ]
}
